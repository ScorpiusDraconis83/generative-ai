<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Avalonia.TextSummarizer.MainWindow"
        Title="Text Summarizer">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Input Options -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button x:Name="LoadFileButton" Margin="5">Load File</Button>
            <TextBox x:Name="TextInput" Margin="5" Width="200"/>
        </StackPanel>

        <!-- Text Input/Display -->
        <ScrollViewer Grid.Row="1" Margin="10">
            <TextBlock x:Name="InputText" TextWrapping="Wrap"/>
        </ScrollViewer>

        <!-- Summarize Button and Output -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10">
            <Button x:Name="SummarizeButton" Margin="5">Summarize</Button>
            <TextBlock x:Name="SummaryOutput" Margin="5" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>